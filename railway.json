{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd databricks-maturity-assessment && npm install && cd client && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd databricks-maturity-assessment && NODE_ENV=production node server/index.js",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

